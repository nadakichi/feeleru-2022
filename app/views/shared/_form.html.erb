<%= form_with model: @business, id: 'new_business', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <div class="img-upload">
    <div class="weight-bold-text">
      職場体験画像
      <span class="indispensable">必須</span>
    </div>
    <div id="previews"></div>
    <div class="click-upload">
      <p>クリックしてファイルをアップロード</p>
      <%= f.file_field :images, name: 'business[images][]', data: {index: 0} %>
    </div>
        <%# 仕事名と内容紹介%>
    <div class="new-businesses">
      <div class="weight-bold-text">
        会社名
        <span class="indispensable">必須</span>
      </div>
        <%= f.text_area :company, class:"businesses-text", id:"company-name", placeholder:"会社名 屋号（必須)", maxlength:"40" %>
      <div class="weight-bold-text">
        職場体験名
        <span class="indispensable">必須</span>
      </div>
        <%= f.text_area :name, class:"businesses-text", id:"business-name", placeholder:"職場体験名（必須 40文字まで)", maxlength:"40" %>
      <div class="businesses-explain">
        <div class="weight-bold-text">
          仕事の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"businesses-text", id:"business-info", placeholder:"職場の説明（必須 1,000文字まで）(体験の特徴、体験先について) ITを活用したイチゴ栽培が特徴です！ 山と川に囲まれた自然豊かな環境！" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /仕事名と内容紹介%>
    <%# 仕事詳細%>
    <div class="businesses-detail">
      <div class="weight-bold-text">仕事の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
        カテゴリー
        <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :category, {}, {class:"select-box", id:"business-category"}) %>
        <div class="weight-bold-text">
        都道府県
        <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
      </div>
    </div>
    <%# /仕事詳細%>
    <%# 販売価格%>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>販売価格<br>(¥300〜9,999,999)</span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"business-price", placeholder:"例）300" %>
        </div>
        <div class="price-content">
          <span>販売手数料 (10%)</span>
          <span>
            <span id='add-tax-price'></span>円
          </span>
        </div>
        <div class="price-content">
          <span>販売利益</span>
          <span>
            <span id='profit'></span>円
        </div>
        </span>
      </div>
    </div>
    <%# /販売価格%>
    <%# 下部ボタン%>
    <div class="sell-btn-contents">
      <%= f.submit "掲載する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン%>
  </div>
  </div>
<%end%>