<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
          <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
            <%# ログインしているときは以下を表示する %>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "マイページ", "#", class: :nav__btn %>
            </div>
            <%# // ログインしているときは上記を表示する %>
          <% else %>
            <%# ログインしていないときは以下を表示する %>
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
            <%# // ログインしていないときは上記を表示する %>
        </div>
      </div>
    </header>